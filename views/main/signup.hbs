<div class="container">
    <div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1>Register and Chat with everyone in the World!</h1>
    </div>
    <form action="/signin" method="POST">
        <div class="row mt-3 col-md-off justify-content-center">
            <label for="name" class="col-md-2">Name</label>
            <input type="text" class="col-md-7" placeholder="Your Name" name="name">
        </div>
         <div class="row mt-3 col-md-off justify-content-center">
            <label for="username" class="col-md-2">Username</label>
            <input type="text" class="col-md-7" placeholder="Username" name="username">
        </div>
         <div class="row mt-3 col-md-off justify-content-center">
            <label for="email" class="col-md-2">Email</label>
            <input type="email" class="col-md-7" placeholder="email@example.com" name="email">
        </div>
        <div class="row mt-3 col-md-off justify-content-center">
            <label for="password" class="col-md-2">Password</label>
            <input type="password" class="col-md-7" placeholder="password" name="password">
        </div>
        <div class="row mt-3 col-md-off justify-content-center">
            <label for="password2" class="col-md-2">Confirm Password</label>
            <input type="password" class="col-md-7" placeholder="confirm password" name="password2">
        </div>
        <div class="m-4 text-center">
            <button type="submit" class="btn btn-primary btn-lg px-4">Sign Up</button>
        </div>
    </form>
</div>